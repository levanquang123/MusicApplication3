<resources>
    <!-- Base application theme. -->
    <style name="Theme.MusicApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/md_theme_dark_primary</item>
        <item name="colorPrimaryDark">?android:colorBackground</item>
        <item name="colorOnPrimary">@color/md_theme_dark_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_dark_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_dark_onPrimaryContainer</item>
        <item name="colorError">@color/md_theme_dark_error</item>
        <item name="colorOnError">@color/md_theme_dark_onError</item>
        <item name="colorErrorContainer">@color/md_theme_dark_errorContainer</item>
        <item name="colorOnErrorContainer">@color/md_theme_dark_onErrorContainer</item>
        <item name="colorOnBackground">@color/md_theme_dark_onBackground</item>
        <item name="colorSurface">@color/md_theme_dark_surface</item>
        <item name="colorOnSurface">@color/md_theme_dark_onSurface</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?android:attr/colorBackground</item>
        <!-- Customize your theme here. -->
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.Material3.Toolbar">
        <item name="navigationIcon">@drawable/ic_arrow_back</item>
        <item name="backgroundColor">?android:colorBackground</item>
    </style>

    <style name="MiniPlayerTheme">
        <item name="android:background">@color/black</item>
    </style>

    <style name="ButtonBackgroundTheme">
        <item name="android:backgroundTint">?android:colorBackground</item>
    </style>

    <style name="DividerStyle">
        <item name="android:background">@color/divider_color_night</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.Material3.SearchView">
        <item name="android:searchIcon">@drawable/ic_search_white</item>
        <item name="android:searchHintIcon">@drawable/ic_search_white</item>
        <item name="android:closeIcon">@drawable/ic_close_white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="SearchedKeyStyle">
        <item name="android:background">?attr/colorSurface</item>
    </style>
</resources>